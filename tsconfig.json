{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "target": "es5",
    "strict": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}